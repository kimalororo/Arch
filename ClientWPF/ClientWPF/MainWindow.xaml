<Window x:Class="ClientWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DataGrid Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="2" ItemsSource="{Binding Path=Builders}" AutoGenerateColumns="True" SelectedItem="{Binding Path=SelectedBuilder, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,80"/>
        <Button Content="Загрузить" HorizontalAlignment="Left" Margin="152,368,0,0" VerticalAlignment="Top" Height="50" Width="99" Command="{Binding GetAllCommand}"/>
        <Button Content="Удалить" HorizontalAlignment="Left" Margin="347,368,0,0" VerticalAlignment="Top" Height="50" Width="100" Command="{Binding DeleteCommand}"/>
        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="540,368,0,0" VerticalAlignment="Top" Height="50" Width="99" Command="{Binding SaveCommand}"/>

    </Grid>
</Window>
